@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!User.Identity.IsAuthenticated)
{
    
<link href="~/Content/Checkout/css/style.css" rel="stylesheet" />
<script src="~/Content/Checkout/js/modernizr.custom.63321.js"></script>

    <header>
        <h2>Bạn cần đăng nhập để tiếp tục...</h2>
    </header>
    <section class="main">
        <form method="post" class="form-1">
            <p class="field">
                <input id="txtUsername" type="text" name="login" placeholder="Username or email">
                <i class="icon-user icon-large"></i>
            </p>
            <p class="field">
                <input id="txtPass" type="password" name="password" placeholder="Password">
                <i class="icon-lock icon-large"></i>
            </p>
            <p class="submit">
                <button id="btnLogin" type="submit" name="submit"><i class="icon-arrow-right icon-large"></i></button>
            </p>
        </form>
    </section>
    
    <script>
        $(document).ready(function () {
            $('#btnLogin').on('click', function (event) {
                event.preventDefault();
                var lgModel = {
                    Username: $('#txtUsername').val(),
                    Password: $('#txtPass').val(),
                    RememberMe:true
                };

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Login","Account")',
                    data: lgModel,
                    success: function (res) {
                        console.log(res);
                        location.reload();
                    }
                });

            });
        });
    </script>
    
}
else
{
       <section class="main">
           <div class="container">
               @using(Html.BeginForm("SaveBill","Checkout",FormMethod.Post))
               { 
               <ul>
